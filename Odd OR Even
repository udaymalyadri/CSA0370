#include<stdio.h>
int main()
{
	int a[100],n,i,odd_count=0,even_count=0;
	printf("Enter array size:");
	scanf("%d",&n);
	printf("Enter the elements:");
	for(i=0;i<n;i++)
	{
		scanf("%d",&a[i]);
	}
	for(i=0;i<n;i++)
	{
		if(a[i]%2==0)
		{
			even_count++;
		}
		else
		{
			odd_count++;
		}
	}
	printf("Number of even numbers:%d\n",even_count);
	printf("Number of odd numbers:%d",odd_count);
	return 0;
}
